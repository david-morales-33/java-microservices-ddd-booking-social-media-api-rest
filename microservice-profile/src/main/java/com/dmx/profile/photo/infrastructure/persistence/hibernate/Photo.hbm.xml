<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dmx.profile.photo.domain.Photo" table="tbl_photo">
        <composite-id name="id" class="com.dmx.profile.photo.domain.PhotoId" access="field">
            <key-property column="pht_id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="url" class="com.dmx.profile.photo.domain.PhotoUrl" access="field">
            <property name="value" column="pht_url" type="text" access="field" length="1000"/>
        </component>

    </class>
</hibernate-mapping>
